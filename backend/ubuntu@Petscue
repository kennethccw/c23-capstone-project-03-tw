version: '3'

services:
  petscue-server:
    env_file:
      - docker.env
    depends_on:
      petscue-db:
        condition: service_healthy
    build:
      context: ./
      dockerfile: ./Dockerfile
    # command: >
    #   sh -c "yarn knex migrate:latest &&
    #          yarn knex seed:run"
    image: 'petscue/petscue-server:latest'
    ports:
      - '8080:8080'
  petscue-db:
    image: 'postgres:13'
    env_file:
      - docker.env
    restart: always
    user: postgres
    ports:
      - '5432:5432'
    volumes:
      - ./pgdata:/var/lib/postgresql/data
    healthcheck:
      test: /usr/bin/pg_isready
      interval: 5s
      timeout: 10s
      retries: 10
